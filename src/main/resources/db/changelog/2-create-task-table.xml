<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <!-- 1) Создаём тип ENUM task_status, если его ещё нет -->
    <changeSet id="0002-1-create-enum-task-status" author="maksim">
        <preConditions onFail="MARK_RAN">
            <!-- Если типа нет (COUNT=0), выполняем changeset -->
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM pg_type WHERE typname = 'task_status'
            </sqlCheck>
        </preConditions>
        <sql>
            CREATE TYPE task_status AS ENUM ('TODO', 'IN_PROGRESS', 'DONE');
        </sql>
        <rollback>
            <sql>
                DO $$
                BEGIN
                IF EXISTS (SELECT 1 FROM pg_type WHERE typname = 'task_status') THEN
                DROP TYPE task_status;
                END IF;
                END$$;
            </sql>
        </rollback>
    </changeSet>

    <!-- 2) Таблица tasks c использованием task_status -->
    <changeSet id="2-create-task-table" author="maksim">
        <createTable tableName="tasks">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_tasks"/>
            </column>

            <column name="project_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="title" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="VARCHAR(2000)"/>

            <!-- статус как PostgreSQL ENUM -->
            <column name="status" type="task_status">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="tasks" indexName="idx_tasks_project_id">
            <column name="project_id"/>
        </createIndex>
        <createIndex tableName="tasks" indexName="idx_tasks_status">
            <column name="status"/>
        </createIndex>
        <createIndex tableName="tasks" indexName="idx_tasks_created_at">
            <column name="created_at"/>
        </createIndex>

        <addForeignKeyConstraint
                baseTableName="tasks" baseColumnNames="project_id"
                referencedTableName="projects" referencedColumnNames="id"
                constraintName="fk_tasks_project"
                onDelete="CASCADE"/>

        <rollback>
            <dropTable tableName="tasks"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
