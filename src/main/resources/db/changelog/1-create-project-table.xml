<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <changeSet id="1-create-project-table" author="maksim">
        <createTable tableName="projects">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_projects"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="VARCHAR(1000)"/>

            <column name="created_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="projects" indexName="idx_projects_created_at">
            <column name="created_at"/>
        </createIndex>
        <createIndex tableName="projects" indexName="idx_projects_updated_at">
            <column name="updated_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
